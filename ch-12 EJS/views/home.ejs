<%- include('partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
  <%- include('partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl font-semibold text-gray-800 mb-8 text-center">Here are our registered homes</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach((home)=>{ %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
            <img class="h-48 w-full object-cover" src="<%= home.photoURL %>" alt="<%= home.houseName %>">
            <div class="p-6">
              <h3 class="font-bold text-xl mb-2 text-gray-800"><%= home.houseName %></h3>
              <div class="flex items-center mb-2">
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="ml-1 text-gray-600"><%= home.rating %>/5</span>
              </div>
              <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt"></i> <%= home.location %></p>
              <p class="text-gray-800 font-bold">â‚¹<%= home.price %>/night</p>
            </div>
          </div>
        <% }) %>
      </div></svg>
    </main>
</body>
</html>